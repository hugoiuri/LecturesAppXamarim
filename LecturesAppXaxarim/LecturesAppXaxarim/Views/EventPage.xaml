<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LecturesAppXaxarim.Views.EventPage"
             Title="Sobre o Evento">
    
        <ContentPage.Padding>
            <OnPlatform x:TypeArguments="Thickness">
                <On Platform="iOS, Android" Value="10,10,10,10" />
            </OnPlatform>
        </ContentPage.Padding>
    <StackLayout>
        <Label Text="{Binding Name}" FontSize="Large" XAlign="Center" />
        <Image Source="{Binding ImageSource}" WidthRequest="250" HeightRequest="250" />
        <Label Text="{Binding Description}" FontSize="Small" XAlign="Center"/>
    </StackLayout>
</ContentPage>